# Quick deployment test (Debian-based, fast)
# Use this for rapid testing before deploying to real Gentoo server
FROM python:3.12-slim

# Install git (needed for some dependencies)
RUN apt-get update && apt-get install -y git && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy application files
COPY requirements.txt .
COPY deploy.sh .
COPY start.sh .
COPY . .

# Make scripts executable
RUN chmod +x deploy.sh start.sh

# Expose port
EXPOSE 8000

# Default command
CMD ["/bin/bash"]
