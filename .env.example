# Instagram/Facebook Credentials
FACEBOOK_VERIFY_TOKEN=your_verify_token_here
# Get from https://developers.facebook.com/apps/YOUR_APP_ID/settings/basic/
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
# Instagram app secret (for Instagram webhook signature validation)
# Get from Instagram app settings - DIFFERENT from Facebook app secret
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_PAGE_ACCESS_TOKEN=your_page_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Database Configuration (SQLite only - configurable path)
# Examples:
#   Development: sqlite+aiosqlite:///./instagram_automation.db
#   Test: sqlite+aiosqlite:///./test.db
#   Production: sqlite+aiosqlite:////absolute/path/to/prod.db
DATABASE_URL=sqlite+aiosqlite:///./instagram_automation.db
# TODO: Add MySQL/PostgreSQL support in Priority 2 when needed

# Logging
LOG_LEVEL=INFO

# Test User IDs (Instagram recipient IDs for testing)
# Format: username:user_id pairs separated by commas
# Example: @user1:1234567890,@user2:0987654321
TEST_USER_IDS=
