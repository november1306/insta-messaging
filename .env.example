# Instagram/Facebook Credentials
FACEBOOK_VERIFY_TOKEN=your_verify_token_here
# Get from https://developers.facebook.com/apps/YOUR_APP_ID/settings/basic/
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
# Instagram app secret (for Instagram webhook signature validation)
# Get from Instagram app settings - DIFFERENT from Facebook app secret
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_PAGE_ACCESS_TOKEN=your_page_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Database Configuration (SQLite only - configurable path)
# Examples:
#   Development: sqlite+aiosqlite:///./instagram_automation.db
#   Test: sqlite+aiosqlite:///./test.db
#   Production: sqlite+aiosqlite:////absolute/path/to/prod.db
DATABASE_URL=sqlite+aiosqlite:///./instagram_automation.db
# TODO: Add MySQL/PostgreSQL support in Priority 2 when needed

# CRM MySQL Configuration (dual storage - optional)
# Enable to sync messages to external CRM MySQL database in parallel with local SQLite
# Note: It's SAFE to commit host, user, and database to git (they're not secrets)
# Only the PASSWORD should be kept secret (use GitHub Secrets for production)
CRM_MYSQL_ENABLED=false
CRM_MYSQL_HOST=your_mysql_host_here
CRM_MYSQL_USER=your_mysql_user_here
CRM_MYSQL_PASSWORD=your_mysql_password_here
CRM_MYSQL_DATABASE=your_mysql_database_here

# Logging
LOG_LEVEL=INFO

# Test User IDs (Instagram recipient IDs for testing)
# Format: username:user_id pairs separated by commas
# Example: @user1:1234567890,@user2:0987654321
TEST_USER_IDS=

# Ngrok Configuration (for Instagram webhook testing)
# Get your auth token from: https://dashboard.ngrok.com/get-started/your-authtoken
# Required for testing Instagram webhooks until you have a real domain
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# JWT/Session Configuration (Phase 1: UI Authentication)
# SESSION_SECRET: Used to sign JWT tokens for UI sessions
# Generate a secure random secret for production:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Keep this secret secure and never commit the real value to git
SESSION_SECRET=your_session_secret_here
# JWT algorithm (HS256 is recommended for symmetric signing)
JWT_ALGORITHM=HS256
# JWT token expiration time in hours (24 hours = 1 day)
JWT_EXPIRATION_HOURS=24
